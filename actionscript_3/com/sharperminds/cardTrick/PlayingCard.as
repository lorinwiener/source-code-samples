IC		public function updateDisplay () : void		{			var playingCardFrameLabel : String = cardSuit + cardValue;			if (playingCardFrameLabel == "") {				playingCardFrameLabel = "back";			}			this.gotoAndStop (playingCardFrameLabel);		}	}	}